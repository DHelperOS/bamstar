<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for localhost and kpostal local server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
    </domain-config>
    
    <!-- Allow HTTPS traffic for Daum Postcode CDN -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">t1.daumcdn.net</domain>
        <domain includeSubdomains="true">postcode.map.daum.net</domain>
        <domain includeSubdomains="true">ssl.daumcdn.net</domain>
    </domain-config>
    
    <!-- Base configuration for production -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug override - allows cleartext in debug builds for testing -->
    <debug-overrides>
        <base-config cleartextTrafficPermitted="true">
            <trust-anchors>
                <certificates src="system" />
                <certificates src="user" />
            </trust-anchors>
        </base-config>
    </debug-overrides>
</network-security-config>